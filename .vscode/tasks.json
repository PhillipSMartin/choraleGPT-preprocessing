{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build inputXml",
            "type": "shell",
            "command": "cd ${workspaceFolder}/build && cmake .. && cmake --build . --target inputXml",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build All",
            "type": "shell",
            "command": "cd ${workspaceFolder}/build && cmake .. && cmake --build .",
            "group": "build"
        },
        {
            "label": "Build Future-Executable",
            "type": "shell",
            "command": "cd ${workspaceFolder}/build && cmake .. && cmake --build . --target future-executable",
            "group": "build"
        }		
	]
}