    "version": "0.2.0",
    "configurations": [       
        {
            "name": "Debug inputEncodings",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/inputEncodings",
            "args": ["../outputs/806B-separate-parts.txt", "-satb", "-v", "-f", "../outputs/806B-combined-parts.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build inputEncodings"
        },
        {
            "name": "Debug inputXml",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/inputXml",
            "args": ["../data/32400B.xml", "-satb", "-f", "../outputs/output.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build inputXml"
        }
    ]
}